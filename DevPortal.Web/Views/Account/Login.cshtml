@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Sayfası | DevPortal</title>
    <link rel="stylesheet" href=@Url.Content("~/bundles/css/main.min.css") asp-append-version="true" />
</head>
<body>
    <header>
    </header>

    <partial name=@PartialViewNames.Message />

    <div class="container-middle">
        <main role="main" class="py-3">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-sm-6 col-12 mb-5 py-5">
                    <figure class="text-center mb-5">
                        <a href="/">
                            <img src="~/img/devportal-logo.png" alt="Dev Portal Logo" title="Dev Portal" />
                        </a>
                    </figure>
                    @using (Html.BeginForm(AccountControllerActionNames.Login, ControllerNames.Account, FormMethod.Post))
                    {
                        @Html.HiddenFor(q => q.ReturnUrl)
                        @Html.AntiForgeryToken()

                        <h6 class="title-secondary">Kullanıcı Girişi</h6>
                        <div class="form-group">
                            <label class="sr-only" for="accountUsername">Kullanıcı Adı</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                                @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", placeholder = "E-posta adresi" })
                                @Html.ValidationMessageFor(x => x.EmailAddress)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="accountPassword">Parola</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    </div>
                                </div>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Parola" })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check form-check-inline">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.IsRemember, new { @class = "custom-control-input" })
                                    @Html.LabelFor(x => x.IsRemember, new { @class = "custom-control-label" })
                                </div>
                            </div>
                            @Html.ActionLink("Parolamı Unuttum", AccountControllerActionNames.ForgotPassword, ControllerNames.Account, null, new { @class = "float-right" })
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                    }

                    <div class="col-12 text-center"><p class="text-monospace text-black-50">© @DateTime.Now.Year - DevPortal</p></div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src=@Url.Content("~/bundles/js/main.min.js") asp-append-version="true"></script>
    <script src=@Url.Content("~/bundles/js/jquery-val.min.js") asp-append-version="true"></script>
</body>
</html>