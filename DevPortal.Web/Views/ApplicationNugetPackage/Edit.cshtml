@model ApplicationNugetPackageViewModel
@{
    ViewData[ViewDataNames.Title] = "Uygulama Nuget Paketi Güncelleme";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}

<h1 class="title-primary display-4">Uygulama Nuget Paketi Güncelleme</h1>

<div class="row">
    <div class="col-md-12">
        <div class="d-flex flex-lg-row flex-column-reverse justify-content-between">
            <h3>@Model.ApplicationNugetPackage.ApplicationName</h3>
            <div class="mb-3 mb-lg-0">
                <button class="btn btn-simple btn-sm hover-info" type="button" data-toggle="tooltip" data-placement="top" data-html="true" title="<b>Son güncelleme: </b>@Model.ApplicationNugetPackage.RecordUpdateInfo.ModifiedDate - @Model.ApplicationNugetPackage.RecordUpdateInfo.ModifiedUserEmail<br><b>Oluşturma: </b>@Model.ApplicationNugetPackage.RecordUpdateInfo.CreatedDate - @Model.ApplicationNugetPackage.RecordUpdateInfo.CreatedUserEmail"><i class="far fa-clock" aria-hidden="true"></i> Tarih Bilgisi</button>
            </div>
        </div>
        @using (Html.BeginForm(ApplicationNugetPackageControllerActionNames.Edit, ControllerNames.ApplicationNugetPackage, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ApplicationNugetPackage.ApplicationId, new { name = "applicationId", id = "applicationId" })
            @Html.HiddenFor(x => x.ApplicationNugetPackage.NugetPackageId, new { name = "packageId", id = "packageId" })

            <div class="form-group">
                @Html.LabelFor(x => x.ApplicationNugetPackage.NugetPackageName, new { @class = "col-form-label" })
                @Html.TextBoxFor(x => x.ApplicationNugetPackage.NugetPackageName, new { @class = "form-control", placeholder = "mxkobi" })
                @Html.ValidationMessageFor(m => m.ApplicationNugetPackage.NugetPackageName)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ApplicationNugetPackage.PackageUrl, new { @class = "col-form-label" })
                <div><a href="@Model.NugetPackageUrl@Model.ApplicationNugetPackage.NugetPackageName" target='_blank'>@Model.NugetPackageUrl@Model.ApplicationNugetPackage.NugetPackageName</a></div>
            </div>
            <div class="py-3">
                <button id="btnSaved" type="submit" class="btn btn-success">Güncelle</button>
            </div>
        }
    </div>
</div>