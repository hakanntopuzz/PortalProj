@model ApplicationSonarQubeProjectViewModel
@{
    ViewData[ViewDataNames.Title] = "SonarQube Projesi Bilgileri";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}
<h1 class="title-primary display-4">SonarQube Projesi Bilgileri</h1>
@Html.HiddenFor(x => x.ApplicationSonarQubeProject.ApplicationId, new { name = "applicationId", id = "applicationId" })
@Html.HiddenFor(x => x.ApplicationSonarQubeProject.SonarqubeProjectId, new { name = "projectId", id = "projectId" })
<input id="favouritePageName" type="hidden" value="@Model.FavouritePageName" />
<input type="hidden" id="favouriteId" />

<div class="row">
    <div class="col-md-12">
        <div class="d-flex flex-lg-row flex-column-reverse justify-content-between">
            <h3>@Model.ApplicationSonarQubeProject.ApplicationName</h3>
            <div class="mb-3 mb-lg-0">
                <button class="btn btn-simple btn-sm hover-action" id="addFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerime Ekle</button>
                <button class="btn btn-simple btn-sm hover-action active" id="deleteFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerimden Çıkar</button>
                @if (Model.IsAuthorized)
                {
                    <a class="btn btn-simple btn-sm hover-success" href="@Url.Action(ApplicationSonarqubeProjectControllerActionNames.Edit, ControllerNames.ApplicationSonarqubeProject, new { id = Model.ApplicationSonarQubeProject.SonarqubeProjectId})">
                        <i class="far fa-edit" aria-hidden="true"></i> @ButtonTextNames.Edit
                    </a>
                    <button class="btn btn-simple btn-sm hover-danger" id="deleteAppSonarQubeProject"><i class="fa fa-trash-alt" aria-hidden="true"></i> Sil</button>
                    <button class="btn btn-simple btn-sm hover-info" id="showAudit"><i class="fa fa-history" aria-hidden="true"></i> Değişiklik Geçmişi</button>
                }
                <button class="btn btn-simple btn-sm hover-info" type="button" data-toggle="tooltip" data-placement="top" data-html="true" title="<b>Son güncelleme: </b>@Model.ApplicationSonarQubeProject.RecordUpdateInfo.ModifiedDate - @Model.ApplicationSonarQubeProject.RecordUpdateInfo.ModifiedUserEmail<br><b>Oluşturma: </b>@Model.ApplicationSonarQubeProject.RecordUpdateInfo.CreatedDate - @Model.ApplicationSonarQubeProject.RecordUpdateInfo.CreatedUserEmail"><i class="far fa-clock" aria-hidden="true"></i> Tarih Bilgisi</button>
            </div>
        </div>
        <ul class="list-group list-group-flush border-0">
            <li class="list-group-item pl-0">
                <strong>Proje Url : </strong>
                <span><a href="@Model.SonarQubeProjectUrl@Model.ApplicationSonarQubeProject.SonarqubeProjectName" target='_blank'>@Model.SonarQubeProjectUrl@Model.ApplicationSonarQubeProject.SonarqubeProjectName</a></span>
            </li>
            <li class="list-group-item pl-0">
                <strong>Proje Tipi : </strong>
                <span>@Model.ApplicationSonarQubeProject.SonarqubeProjectTypeName</span>
            </li>
            <li class="list-group-item pl-0">
                <strong>Proje Adı : </strong>
                <span>@Model.ApplicationSonarQubeProject.SonarqubeProjectName</span>
            </li>
        </ul>
    </div>
</div>

@await Component.InvokeAsync("Audit", new { tableName = "SonarqubeProject", recordId = Model.ApplicationSonarQubeProject.SonarqubeProjectId })

@section Scripts{
    <script src="~/bundles/js/sonarQubeProjectDetail.min.js" asp-append-version="true"></script>
    <script src="~/bundles/js/favourite.min.js" asp-append-version="true"></script>
}