@model DatabaseGroupViewModel
@{
    ViewData[ViewDataNames.Title] = "Yeni Veritabanı Grubu";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}
<h1 class="title-primary display-4">Yeni Veritabanı Grubu</h1>

@using (Html.BeginForm(DatabaseGroupControllerActionNames.Add, ControllerNames.DatabaseGroup, FormMethod.Post, new { id = "databasegroup-form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(x => x.DatabaseGroup.Name, new { @class = "col-form-label" })
                @Html.TextBoxFor(x => x.DatabaseGroup.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.DatabaseGroup.Name)
            </div>
        </div>
    </div>
    <div class="row col-md-12">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
}

@section Scripts{
    <script src="~/bundles/js/jquery-val.min.js" asp-append-version="true"></script>
}