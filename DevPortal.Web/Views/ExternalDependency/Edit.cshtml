@model ExternalDependencyViewModel
@{
    ViewData[ViewDataNames.Title] = "Harici Bağımlılık Güncelleme";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}

<h1 class="title-primary display-4">Harici Bağımlılık Güncelleme</h1>
<div class="d-flex flex-lg-row flex-column-reverse justify-content-between">
    <h3>@Model.ExternalDependency.ApplicationName</h3>
    <div class="mb-3 mb-lg-0">
        <button class="btn btn-simple btn-sm hover-info" type="button" data-toggle="tooltip" data-placement="top" data-html="true" title="<b>Son güncelleme: </b>@Model.ExternalDependency.RecordUpdateInfo.ModifiedDate - @Model.ExternalDependency.RecordUpdateInfo.ModifiedUserEmail<br><b>Oluşturma: </b>@Model.ExternalDependency.RecordUpdateInfo.CreatedDate - @Model.ExternalDependency.RecordUpdateInfo.CreatedUserEmail">
            <i class="far fa-clock" aria-hidden="true"></i> Tarih Bilgisi
        </button>
    </div>
</div>

@using (Html.BeginForm(ExternalDependencyControllerActionNames.Edit, ControllerNames.ExternalDependency, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ExternalDependency.Id);
    @Html.HiddenFor(x => x.ExternalDependency.ApplicationId, new { name = "applicationId", id = "applicationId" });
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(x => x.ExternalDependency.Name, new { @class = "col-form-label" })
                @Html.TextBoxFor(x => x.ExternalDependency.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ExternalDependency.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ExternalDependency.Description, new { @class = "col-form-label" })
                @Html.TextBoxFor(x => x.ExternalDependency.Description, new { @class = "form-control" })
            </div>
            <div class="py-3">
                <button type="submit" class="btn btn-success">Güncelle</button>
            </div>
        </div>
    </div>
}