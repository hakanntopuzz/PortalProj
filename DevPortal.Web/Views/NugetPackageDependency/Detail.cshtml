@model NugetPackageDependencyViewModel
@{
    ViewData[ViewDataNames.Title] = "Nuget Paketi Bağımlılık Bilgileri";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}

<h1 class="title-primary display-4">Nuget Paketi Bağımlılık Bilgileri</h1>
@Html.HiddenFor(x => x.NugetPackageDependency.Id, new { name = "nugetPackageDependencyId", id = "nugetPackageDependencyId" })
@Html.HiddenFor(x => x.NugetPackageDependency.DependentApplicationId, new { name = "applicationId", id = "applicationId" })
<input id="favouritePageName" type="hidden" value="@Model.FavouritePageName" />
<input type="hidden" id="favouriteId" />

<div class="card">
    <div class="card-body">
        <div class="d-flex flex-lg-row flex-column-reverse justify-content-between">
            <div>
                <h3>@Model.NugetPackageDependency.ApplicationName</h3>
            </div>
            <div class="mb-3 mb-lg-0">
                <button class="btn btn-simple btn-sm hover-action" id="addFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerime Ekle</button>
                <button class="btn btn-simple btn-sm hover-action active" id="deleteFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerimden Çıkar</button>
                @if (Model.IsAuthorized)
                {
                    <button class="btn btn-simple btn-sm hover-danger" id="deleteNugetPackageDependency"><i class="fa fa-trash-alt" aria-hidden="true"></i> Sil</button>
                    <button class="btn btn-simple btn-sm hover-info" id="showAudit"><i class="fa fa-history" aria-hidden="true"></i> Değişiklik Geçmişi</button>
                }
                <button class="btn btn-simple btn-sm hover-info" type="button" data-toggle="tooltip" data-placement="top" data-html="true" title="<b>Son güncelleme: </b>@Model.NugetPackageDependency.RecordUpdateInfo.ModifiedDate - @Model.NugetPackageDependency.RecordUpdateInfo.ModifiedUserEmail<br><b>Oluşturma: </b>@Model.NugetPackageDependency.RecordUpdateInfo.CreatedDate - @Model.NugetPackageDependency.RecordUpdateInfo.CreatedUserEmail">
                    <i class="far fa-clock" aria-hidden="true"></i> Tarih Bilgisi
                </button>
            </div>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item pl-0">
                <strong>Bağımlılık Adı : </strong>
                <span>@Model.NugetPackageDependency.NugetPackageName</span>
            </li>
            <li class="list-group-item pl-0">
                <strong>Paket Url : </strong>
                <span>@Model.NugetPackageDependency.PackageUrl</span>
            </li>
        </ul>
    </div>
</div>
@await Component.InvokeAsync("Audit", new { tableName = "NugetPackageDependency", recordId = Model.NugetPackageDependency.Id })

@section Scripts{
    <script src="~/js/nugetPackageDependencyDetail.js"></script>
    <script src="~/bundles/js/favourite.min.js" asp-append-version="true"></script>
}