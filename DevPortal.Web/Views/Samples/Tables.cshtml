    <!-- Accordion Datatable -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/rowgroup/1.1.2/css/rowGroup.bootstrap4.min.css" />
    <script src="https://cdn.datatables.net/rowgroup/1.1.2/js/dataTables.rowGroup.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#accordion-datatable').DataTable({
                order: [[2, 'asc']],
                rowGroup: {
                    dataSrc: 2,
                    startClassName: 'table-start-group active fa'
                }
            });
            $('#accordion-datatable').on('click', '.table-start-group', function () {
                var rowsCollapse = $(this).nextUntil('.table-start-group');
                $(this).toggleClass("active");
                $(rowsCollapse).toggleClass('d-none');
            });
        });
    </script>
}
