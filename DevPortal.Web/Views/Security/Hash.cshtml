@model HashViewModel
@{
    ViewData[ViewDataNames.Title] = "Hashleme";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}
<div class="mb-5">
    <h1 class="title-primary display-4">Hashleme</h1>
    <input type="hidden" id="favouritePageName" name="favouritePageName" value="Hashleme" />
    <input type="hidden" id="favouriteId" />
    <div class="row">
        <div class="col-12">
            <button class="btn btn-simple btn-sm hover-action float-right" id="addFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerime Ekle</button>
            <button class="btn btn-simple btn-sm hover-action float-right active" id="deleteFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerimden Çıkar</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Hashleme</h5>
                <p class="card-text">SHA1 ve SHA512 algoritmalarına göre hashleme yapılır.</p>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm(SecurityControllerActionNames.Hash, ControllerNames.Security, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Hash Algoritması</h5>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="HashType" value="@HashTypes.SHA1" id="sha1" />
                                    <label class="form-check-label" for="sha1">@HashTypes.SHA1.ToString()</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="HashType" value="@HashTypes.SHA512" id="sha512" />
                                    <label class="form-check-label" for="sha512">@HashTypes.SHA512.ToString()</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="HashToText" class="form-control form-control-lg" type="text" placeholder="Hashlenecek metin" />
                @Html.ValidationMessageFor(m => m.HashToText)
            </div>

            <input type="submit" value="Hashle" class="btn btn-primary" />
        }

        @if (Model.HashedTextHasValue)
        {
            <div class="col-12 my-5 pl-0">
                <button class="btn btn-block" id="copyButton" type="button" data-toggle="tooltip" data-original-title="Kopyala">
                    <span class="clip-board-wrapper" id="clipboard">
                        <pre>@Model.HashedText</pre>
                    </span>
                </button>
            </div>
        }
    </div>
</div>
@section Scripts
{
    <script src="~/bundles/js/favourite.min.js" asp-append-version="true"></script>
}