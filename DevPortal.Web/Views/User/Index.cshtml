@model UserListViewModel

@{
    ViewData[ViewDataNames.Title] = "Kullanıcılar";
    ViewBag.BreadCrumb = Model.BreadCrumbViewModel;
}
<link rel="stylesheet" href="~/bundles/css/dataTable.css" asp-append-version="true" />
<h1 class="title-primary display-4">Kullanıcılar</h1>
<input type="hidden" id="favouritePageName" name="favouritePageName" value="Kullanıcılar" />
<input type="hidden" id="favouriteId" />

<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            <input type="text" id="user-search" class="form-control" value="" placeholder="Kullanıcı Adı.." />
        </div>
    </div>
    <div class="form-group col-md-1">
        <button type="button" class="btn btn-primary btn-xs-block" id="user-search-button">Ara</button>
    </div>
    <div class="form-group col-md-8 text-right">
        <a class="btn btn-simple btn-sm hover-success" href="@Url.Action(UserControllerActionNames.Add, ControllerNames.User)">
            <i class="fa fa-plus" aria-hidden="true"></i> @ButtonTextNames.Add
        </a>
        <button class="btn btn-simple btn-sm hover-action" id="addFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerime Ekle</button>
        <button class="btn btn-simple btn-sm hover-action active" id="deleteFavourite"><i class="fa fa-star" aria-hidden="true"></i> Favorilerimden Çıkar</button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered" id="user-table">
            <caption class="hide">Kullanıcılar</caption>
            <thead>
                <tr>
                    <th scope="col" data-column="FirstName">Ad</th>
                    <th scope="col" data-column="LastName">Soyad</th>
                    <th scope="col" data-column="EmailAddress">E-posta Adresi</th>
                    <th scope="col" data-column="UserStatus">Durum</th>
                    <th scope="col" data-column="UserType">Kullanıcı Tipi</th>
                    <th scope="col" data-column="ModifiedDate">Son Güncelleme</th>
                    <th scope="col"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/bundles/js/dataTable.min.js" asp-append-version="true"></script>
    <script src="~/bundles/js/user.min.js" asp-append-version="true"></script>
    <script src="~/bundles/js/favourite.min.js" asp-append-version="true"></script>
}
