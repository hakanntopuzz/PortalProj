{
  "name": "jenkins",
  "homepage": "/jenkins/",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.2",
    "bootstrap": "^4.4.1",
    "env-cmd": "^10.1.0",
    "mdbreact": "^4.25.4",
    "mutationobserver-shim": "^0.3.7",
    "react": "^16.13.0",
    "react-csv": "^2.0.3",
    "react-dom": "^16.13.0",
    "react-hook-form": "^5.7.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "reactstrap": "^8.4.1",
    "sweetalert2": "^9.15.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^7.2.1",
    "axios-mock-adapter": "^1.17.0",
    "jest-sonar-reporter": "^2.0.0",
    "react-test-renderer": "^16.13.1"
  },
  "scripts": {
    "start:local": "env-cmd -f src/config/.env.local react-scripts start",
    "start:dev": "env-cmd -f src/config/.env.dev react-scripts start",
    "build:local": "env-cmd -f src/config/.env.local react-scripts build & npm run postbuild ",
    "build:dev": "env-cmd -f src/config/.env.dev react-scripts build & npm run postbuild",
    "build:prod": "env-cmd -f src/config/.env.prod react-scripts build & npm run postbuild",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --env=jsdom --silent --coverage --testResultsProcessor jest-sonar-reporter --no-watch --watch=false --watchAll=false --no-watchman",
    "postbuild": "copy .\\utilities\\web.config .\\build\\web.config"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!node_modules/",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/components/config/",
      "!public/**",
      "!build/**",
      "!src/setupTests.js",
      "!src/serviceWorker.js"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
